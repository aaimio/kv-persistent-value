{
  "name": "kv-persistent-value",
  "version": "1.0.1",
  "description": "The \"server-side\" for the https://github.com/aaimio/set-persistent-value and https://github.com/aaimio/get-persistent-value",
  "author": "Aaron Imming <aaim@protonmail.com>",
  "license": "MIT",
  "main": "dist/worker.js",
  "scripts": {
    "build": "yarn build:validation && webpack",
    "build:validation": "ts-node ./scripts/validations/build.ts",
    "build:api-definitions": "node ./scripts/api-definition/build.js test.json",
    "deploy": "wrangler publish",
    "tail": "wrangler tail",
    "format": "prettier --write  '*.{json,js}' 'src/**/*.{js,ts}'",
    "lint": "eslint ./src && prettier --check '*.{json,js}' 'src/**/*.{js,ts}'",
    "test": "jest --config jestconfig.json --verbose --coverage"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.0.0",
    "@cloudflare/wrangler": "^1.19.7",
    "@types/itty-router-extras": "^0.4.0",
    "@types/jest": "^27.4.0",
    "@types/service-worker-mock": "^2.0.1",
    "@types/swagger-jsdoc": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "ajv": "^8.8.2",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-typescript": "^3.0.0",
    "itty-router": "^2.4.8",
    "itty-router-extras": "^0.4.2",
    "jest": "^27.0.1",
    "prettier": "^2.3.0",
    "service-worker-mock": "^2.0.5",
    "swagger-jsdoc": "^6.1.0",
    "ts-jest": "^27.0.1",
    "ts-loader": "^9.2.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  }
}
